<body>
    <h1>Java to Go</h1>

    <form action="/waiter/{{WaiterName}}" method="post" >
    <strong class="selectDay">Hi {{WaiterName}}, Choose the day(s) you would like to work on. </strong>

        <br>
        <br>
        {{#each week}}

              <input type="checkbox" name="day" value={{id}} ><label> {{weekday}}
              </label>
            {{/each}}

            <div>
                <br>
                <button class="button-primary" type="submit" name="button">CONFIRM</button>
           </div>

    </form>
</body>
</html>